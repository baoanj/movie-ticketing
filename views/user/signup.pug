      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body.signup
    header.row.clearfix.nav-root
      .col-md-12.column.nav-con
        nav.navbar.navbar-default.nav-bg(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') 12345电影
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
    header.row.clearfix.nav-root-v
      .col-md-12.column.nav-con-v
        nav.navbar.navbar-default.nav-bg-v(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') 12345电影
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
    .row.clearfix.signup-form
      .col-md-12.column
        h3.signup-h3 用户注册
        form#register_form.form-horizontal(action='/user/signup', method='post')
          .input-group
            span.input-group-addon
              i.fa.fa-user-o.fa-fw
            input#username.form-control(name='username', type='text', placeholder='用户名', maxlength='18', value=user.username)
          p#username_tips.tips
            i.fa.fa-info-circle.fa-fw
            |  用户名为6~18位英文字母、数字或下划线，必须以英文字母开头
          p#err_username.error!= error.username
          .input-group
            span.input-group-addon
              i.fa.fa-envelope-o.fa-fw
            input#email.form-control(name='email', type='email', placeholder='邮箱', value=user.email)
          p#email_tips.tips
            i.fa.fa-info-circle.fa-fw
            |  请填写您常用的邮箱
          p#err_email.error!= error.email
          .input-group
            span.input-group-addon
              i.fa.fa-key.fa-fw
            input#password.form-control(name='password', type='password', placeholder='密码', maxlength='12', value=user.password)
          p#password_tips.tips
            i.fa.fa-info-circle.fa-fw
            |  密码为6~12位数字、大小写字母、中划线、下划线
          p#err_password.error!= error.password
          .input-group
            span.input-group-addon
              i.fa.fa-key.fa-fw
            input#repeatpass.form-control(name='repeatpass', type='password', placeholder='重复密码', maxlength='12', value=user.repeatpass)
          p#repeatpass_tips.tips
            i.fa.fa-info-circle.fa-fw
            |  请输入和前面相同的密码
          p#err_repeatpass.error!= error.repeatpass
          button#reset.btn.btn-default(type='reset') 重置
          button#register.btn.btn-default(type='submit') 注册
        p#switch 已有账号？
          a(href='/user/signin', title='登录') 登录
    footer.row.clearfix
      | ©2017 12345电影网
    script(type='text/javascript', src='/javascripts/jquery.js')
    script(type='text/javascript', src='/javascripts/signup.js')
    script(type='text/javascript', src='/javascripts/validator.js')
    script(src='/javascripts/bootstrap-3.3.7-dist/js/bootstrap.min.js')
